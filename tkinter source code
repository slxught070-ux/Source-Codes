import tkinter as tk
from tkinter import messagebox

def message_box():
    try:
        messagebox.showinfo("Hello, World!", "Hello, World!")
    except Exception as e:
        messagebox.showerror("pilivetka{e}")

root = tk.Tk()
root.title("Hello, World!")
root.geometry("600x400")
root.resizable(False, False)

root.iconbitmap("NewFolder1\\DemoIcon.ico")

canvas = tk.Canvas(root, width=600, height=450, highlightthickness=0)
canvas.pack(fill="both", expand=True)

button = tk.Button(root, text="Нажми меня!", command=message_box,
                            font=("Consolas", 14), bg="#ffffff", fg="#000000")

canvas.create_window(300, 100, window=button)

root.mainloop()
